

//User function Template for Java

class Solution
{
    public long findMinDiff (ArrayList<Integer> a, int n, int m)
    {
        Collections.sort(a);
        int min=Integer.MAX_VALUE;
        for(int i=0;i<=n-m;i++){
            int cd=a.get(i+m-1)-a.get(i);
            if(cd<min){
                min=cd;
            }
        }
        return min;
        // your code here
    }
}
